{
  "name": "@egoist/tipc",
  "version": "0.3.0",
  "description": "Typesafe IPC for Electron",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "types",
    "/main",
    "/react-query",
    "/renderer"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && tsup src/main.ts src/renderer.ts src/react-query.ts --format esm,cjs",
    "dev-main": "pnpm build --watch",
    "dev-types": "tsc --watch",
    "dev": "run-p dev-main dev-types",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    "./main": {
      "require": "./dist/main.cjs",
      "default": "./dist/main.js"
    },
    "./renderer": {
      "require": "./dist/renderer.cjs",
      "default": "./dist/renderer.js"
    },
    "./react-query": {
      "require": "./dist/react-query.cjs",
      "default": "./dist/react-query.js"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tanstack/react-query": "^5.32.1",
    "electron": "^30.0.0",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5.32.1",
    "electron": ">=26.0.0"
  },
  "optionalDependencies": {
    "@tanstack/react-query": "^5.32.1"
  }
}
